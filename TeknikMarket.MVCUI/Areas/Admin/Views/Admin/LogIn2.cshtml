@{
    Layout = null;
}

@model LogInViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Log in (v2)</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/admin/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/admin/dist/css/adminlte.min.css">
    <link href="~/limonte-sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <style>
        .validation-summary-errors {
            color: red;
        }

        .field-validation-error {
            color: red;
        }

    </style>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="#" class="h1"><b>Teknik</b>Market</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Oturumunuzu başlatmak için oturum açın</p>

                <form id="frmLogIn">
                   @Html.AntiForgeryToken()
                    <div asp-validation-summary="All"></div>
                    <div class="input-group mb-3">
                        <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Email"></span>
                    <div class="input-group mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Password"></span>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input @*asp-for="RememberMe"*@ type="checkbox" id="remember">
                                <label for="remember">
                                    Beni Hatırla
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button id="btnGiris" type="button" class="btn btn-primary btn-block">Giriş Yap</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>


                @ViewBag.Mesaj

                <p class="mb-1">
                    <a href="/Admin/Admin/ForgotPassword">Şifreni Mi Unuttun?</a>
                </p>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/admin/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/admin/dist/js/adminlte.min.js"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/limonte-sweetalert2/sweetalert2.min.js"></script>

    <script>
        $(document).ready(
            function () {
                $("#btnGiris").click(function () {
                    var vm = {
                        Email: $("#Email").val(),
                        Password: $("#Password").val()
                        // RememberMe: $("#RememberMe").val()
                    }
                    var form = $("#frmLogIn");

                    var token = $('input[name="__RequestVerificationToken"]', form).val();


                    if ($("#frmLogIn").valid())
                    {
                        $.ajax({
                            url: "/Admin/Admin/LogIn2",
                            method: "post",
                            dataType: "json",
                            data: { __RequestVerificationToken: token, model: vm }, /* form.serialize, */
                            success: function (r) {
                                if (r.result) {
                                    window.location.href = "/Admin/Home/Index";
                                } else {
                                    Swal.fire({
                                        icon: "error",
                                        title: "Giriş Başarısız",
                                        text: r.mesaj
                                    })
                                }
                            },
                            error: function () {

                            }
                        });
                    }








                });



            });
    </script>
</body>
</html>
